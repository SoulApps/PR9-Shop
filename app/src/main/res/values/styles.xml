<resources>

    <!-- Tema de la aplicación. Debe heredar de Theme.AppCompat -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Color de la ActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Color de la barra de notificaciones -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color de acento (contraste) -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Estilo para que la toolbar se muestre oscura -->
    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Estilo para que el menú de overflow en la toolbar se muestre claro -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
